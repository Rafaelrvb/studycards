        <li class="nav-item">
          <%= link_to "My Collection", "#", class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "My Marketplace", "#", class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
