<div class="container">
  <h2 class="text-center"><%= @deck.title %></h2>
  <hr>
  <div>
  <% unless @cards.nil? %>
    <% @cards.each do |card| %>
        <div class="list-cards">
          <%= simple_form_for card, html: {class: "row"}, url: update_card_path(card.id) do |f| %>
            <div class="col">
              <%= f.input :front_page, label: false %>
            </div>
            <div class="col">
              <%= f.input :back_page, label: false %>
            </div>
            <div class="btn-update-delete ">
              <%= f.button :submit, value: 'Update', class: 'btn btn-sm '  %>
              <%= link_to "", destroy_card_path(card.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt", id: "del-card" %>
            </div>
          <% end %>
        </div>
    <% end %>
  <% end %>
  </div>
  <hr>
  <div class="card-creator">
    <%= simple_form_for @card, url: create_card_path(params[:id]), remote: true do |f| %>
      <div class="row">
        <div class="col">
          <%= f.input :front_page, label: false, placeholder: 'Front' %>
        </div>
        <div class="col">
          <%= f.input :back_page, label: false, placeholder: 'Back' %>
        </div>
      </div>
        <div class="text-center my-3 deck-show-btns">
          <%= f.button :submit, class: 'btn' %>
        </div>
    <% end %>
  </div>



</div>
