<div class="container">
  <h3>Card Creator</h3>
  <div>
  <% unless @cards.nil? %>
    <% @cards.each do |card| %>
        <div class="list-cards">
          <%= simple_form_for card, html: {class: "row"}, url: update_card_path(card.id) do |f| %>
            <div class="col">
              <%= f.input :front_page, label: false %>
            </div>
            <div class="col">
              <%= f.input :back_page, label: false %>
            </div>
            <div class="btn-update-delete" style="left: -20px;">
              <%= f.button :submit, value: 'Update', class: 'btn btn-sm btn-primary'  %>
              <%= link_to 'Delete', destroy_card_path(card.id), :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-sm btn-primary' %>
            </div>
          <% end %>
        </div>
    <% end %>
  <% end %>
  </div>
  <hr>
      <%= simple_form_for @card, url: create_card_path(params[:id]) do |f| %>
        <div class="d-flex">
          <div>
            <%= f.input :front_page, label: false, placeholder: 'Front' %>
          </div>
          <div>
            <%= f.input :back_page, label: false, placeholder: 'Back' %>
          </div>
        </div>

        <div class="text-center">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      <% end %>


</div>
