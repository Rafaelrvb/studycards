
<div class="container text-center my-3">

  <div class="my-collection row d-flex justify-content-between">

    <div class="list-collection col-6">
      <h1>My collection</h1>
      <% @deck_community.each do |decks| %>
        <div class="deck-item" style="display: grid; grid-template-columns: 1fr 1fr 1fr ">
          <%= link_to "#{decks.deck.title}", show_path(decks.deck), class: "btn btn-info" %>
          <%= link_to "Study this deck", new_study_path(decks), class: "btn btn-primary" %>
          <div class="text-center "><%= link_to "", decks, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></div>
        </div>
      <% end %>
    </div>

    <div class="col ">
      <div class="card-collection col">
        <h4>Deck </h4>
