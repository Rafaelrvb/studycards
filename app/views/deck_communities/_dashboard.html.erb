
  <div class="card-collection col">
    <div id="deck-info-dashboard" class="row">
      <div><p>Deck: <strong><%= @deck_community[var.to_i].deck.title%></strong></p> </div>
      <div><p>Author: <%= User.find(@deck_community[var.to_i].deck.user_id).name %></p></div>
      <div><p>NÂ° of cards: <%= @deck_community[var.to_i].deck.cards.count%></p></div>
    </div>

    <div id="deck-session-dashboard" class="row">
    <% unless @deck_community[params[:var].to_i].user_progress.nil? %>

      <div id="deck-session-info" style="text-align: justify">
        <p>Sessions completed: <span id="0101"><%= @deck_community[var.to_i].user_progress.sessions%></span></p>
        <p>Cards completed: <span id="0102"><%= @cards_done %></span><span> / <%=@deck_community[var.to_i].deck.cards.count%></span></p>
        <p>Total score: <span id="0103"><%= @score.to_i%></span>%</p>
      </div>
    <% end %>
      <div id="btns">
        <div><%= link_to "Study", new_study_path(@deck_community[var.to_i]), class: "btn" %></div>
        <div><%= link_to "Deck Info", show_path(@deck_community[var.to_i].deck), class: "btn btn-deck-info" %></div>
        <div><%= link_to "", deck_community_path(@deck_community[var.to_i]), method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></div>
      </div>
    </div>

  </div>
